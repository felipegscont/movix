{
    "name": "movix/nfe-microservice",
    "description": "Microserviço para geração e comunicação de NFe usando sped-nfe",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.0",
        "nfephp-org/sped-nfe": "^5.1",
        "slim/slim": "^4.0",
        "slim/psr7": "^1.0",
        "monolog/monolog": "^2.0",
        "vlucas/phpdotenv": "^5.0",
        "ramsey/uuid": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Movix\\NfeService\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Movix\\NfeService\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
